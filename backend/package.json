{
  "name": "school-management-api",
  "version": "1.0.0",
  "description": "Backend API for School Management System",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "debug": "node --inspect-brk=9229 src/app.js",
    "debug:dev": "nodemon --inspect=9229 src/app.js",
    "build": "npm run clean && npm run copy-files",
    "clean": "rimraf dist",
    "copy-files": "cp -r src dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js"
  },
  "keywords": ["school", "management", "api", "education"],
  "author": "BuildAQ",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "bcrypt": "^5.1.1",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    
    "@azure/storage-blob": "^12.17.0",
    "mssql": "^9.1.1",
    
    "aws-sdk": "^2.1467.0",
    "pg": "^8.11.3",
    
    "firebase-admin": "^11.11.0",
    
    "mongoose": "^7.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.49.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}