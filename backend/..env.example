# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# Choose one based on your preference:

# PostgreSQL
DATABASE_TYPE=postgresql
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=school_management
DATABASE_USER=your_username
DATABASE_PASSWORD=your_password
DATABASE_SSL=false

# SQL Server / Azure SQL
# DATABASE_TYPE=mssql
# DATABASE_HOST=your-server.database.windows.net
# DATABASE_NAME=school_management
# DATABASE_USER=your_username
# DATABASE_PASSWORD=your_password
# DATABASE_ENCRYPT=true

# MongoDB
# DATABASE_TYPE=mongodb
# DATABASE_CONNECTION_STRING=mongodb://localhost:27017/school_management

# Authentication Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-this
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Azure AD B2C Configuration (if using)
AZURE_AD_B2C_TENANT_ID=your-tenant-id
AZURE_AD_B2C_CLIENT_ID=your-client-id
AZURE_AD_B2C_CLIENT_SECRET=your-client-secret
AZURE_AD_B2C_POLICY=B2C_1_signupsignin

# Auth0 Configuration (if using)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=your-api-identifier

# File Storage Configuration
# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=school-files

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=school-management-files

# Application Settings
API_VERSION=v1
API_BASE_URL=http://localhost:3000/api
FRONTEND_URL=http://localhost:4200,https://schools.buildaq.com,https://shell.buildaq.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications)
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Monitoring & Logging
LOG_LEVEL=info
APPLICATION_INSIGHTS_KEY=your-app-insights-key

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:4200,https://schools.buildaq.com,https://shell.buildaq.com

# Feature Flags
ENABLE_SWAGGER_DOCS=true
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_DETAILS=true